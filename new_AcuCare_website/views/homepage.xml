<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =============================== -->
    <!-- 1. INJECT CSS INTO <head> TAG   -->
    <!-- =============================== -->
    <template id="acucare_homepage_assets" inherit_id="website.layout">
        <xpath expr="//head" position="inside">

            <!-- Font Awesome -->
            <link rel="stylesheet"
                  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

            <style>

                /* ------------- GLOBAL STYLE ------------- */
                .acucare-scope * {
                    box-sizing: border-box;
                    font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
                }

                .acucare-scope .container {
                    max-width: 1200px;
                    margin: 0 auto;
                    padding: 0 20px;
                }

                /* ---------------- HERO SECTION ---------------- */
                .acucare-scope .hero {
                    padding: 120px 0;
                    background: #e8f0fe;
                }

                .acucare-scope .hero-content h1 {
                    font-size: 48px;
                    line-height: 1.3;
                    font-weight: 700;
                    color: #202124;
                }

                .acucare-scope .hero-content h1 span {
                    color: #1a73e8;
                }

                .acucare-scope .hero-content p {
                    margin-top: 20px;
                    font-size: 18px;
                    max-width: 700px;
                }

                .acucare-scope .btn-primary {
                    display: inline-block;
                    padding: 12px 24px;
                    background: #1a73e8;
                    color: white;
                    border-radius: 8px;
                    margin-top: 30px;
                    text-decoration: none;
                    font-size: 16px;
                }

                /* ---------------- WHAT WE DO ---------------- */
                .acucare-scope .what-we-do {
                    padding: 100px 0;
                }

                .acucare-scope .section-title h2 {
                    font-size: 32px;
                    text-align: center;
                    margin-bottom: 40px;
                }

                .acucare-scope .features-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                    gap: 30px;
                }

                .acucare-scope .feature-card {
                    padding: 30px;
                    background: white;
                    border-radius: 12px;
                    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
                    text-align: center;
                }

                .acucare-scope .feature-icon {
                    font-size: 40px;
                    color: #1a73e8;
                    margin-bottom: 15px;
                }

            </style>

        </xpath>
    </template>



    <!-- =============================== -->
    <!-- 2. HOMEPAGE CONTENT TEMPLATE    -->
    <!-- =============================== -->
    <record id="page_acucare_home" model="website.page">
        <field name="url">/acucare-home</field>
        <field name="website_published">True</field>
        <field name="name">AcuCare Home</field>
        <field name="type">qweb</field>
        <field name="key">theme_acucare.page_acucare_home</field>

        <field name="arch" type="xml">
            <t t-call="website.layout">

                <div class="acucare-scope">

                    <!-- HERO -->
                    <section class="hero" id="home">
                        <div class="container">
                            <div class="hero-content">
                                <h1>
                                    Shaping the future of <span>compliant, intelligent</span> healthcare delivery.
                                </h1>
                                <p>AcuCare Systems helps regulated healthcare providers transform governance...</p>

                                <div class="hero-buttons">
                                    <a href="#contact" class="btn-primary">
                                        <i class="fas fa-calendar-check"></i> Book a discovery call
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- WHAT WE DO -->
                    <section class="what-we-do">
                        <div class="container">
                            <div class="section-title">
                                <h2>What We Do</h2>
                            </div>

                            <div class="features-grid">

                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="fas fa-laptop-medical"></i>
                                    </div>
                                    <h3>Unified Compliance Platform</h3>
                                    <p>Our flagship platform, <strong>AcuCare OS</strong>...</p>
                                </div>

                            </div>

                        </div>
                    </section>

                </div>

            </t>
        </field>
    </record>

</odoo>
